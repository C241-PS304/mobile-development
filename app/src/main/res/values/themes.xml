<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FaceTrack" parent="Theme.Material3.Light.NoActionBar">

    </style>

    <style name="Theme.FaceTrack" parent="Base.Theme.FaceTrack" />

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/primary_purple</item>
        <item name="android:navigationBarColor">@color/primary_purple</item>
        <item name="windowSplashScreenBackground">@color/primary_purple</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.FaceTrack.PurpleStatusBar</item>
    </style>

    <style name="Theme.FaceTrack.PurpleStatusBar" parent="Base.Theme.FaceTrack">
        <item name="android:statusBarColor">@color/primary_purple</item>
        <item name="android:navigationBarColor">@color/primary_purple</item>
    </style>

    <style name="Theme.FaceTrack.WhiteStatusBar" parent="Base.Theme.FaceTrack">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>