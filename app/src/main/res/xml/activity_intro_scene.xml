<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto" >

    <ConstraintSet android:id="@+id/menu1">
        <Constraint
            android:id="@+id/iv_intro_1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="84dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/iv_indicator_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="28dp"
            motion:layout_constraintEnd_toStartOf="@id/iv_indicator_2"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_1" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/iv_indicator_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_1" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/menu2"
        motion:deriveConstraintsFrom="@+id/menu1" >

        <Constraint
            android:id="@+id/iv_intro_1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="84dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />

        <Constraint
            android:id="@+id/iv_intro_2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="84dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/iv_indicator_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="28dp"
            motion:layout_constraintEnd_toStartOf="@id/iv_indicator_2"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/iv_indicator_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/iv_indicator_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginStart="28dp"
            motion:layout_constraintStart_toEndOf="@id/iv_indicator_2"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/btn_next_intro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="38dp"
            android:paddingVertical="12dp"
            motion:layout_constraintTop_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/btn_next_intro_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="38dp"
            android:paddingVertical="12dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/menu1"
        motion:constraintSetEnd="@+id/menu2" >
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@id/iv_intro_1"
            motion:touchAnchorSide="right"/>
    </Transition>

    <Transition
        motion:constraintSetStart="@id/menu1"
        motion:constraintSetEnd="@id/menu2">
        <OnClick
            motion:targetId="@+id/btn_next_intro_1"
            motion:clickAction="transitionToEnd" />
    </Transition>

    <ConstraintSet
        android:id="@+id/menu3"
        motion:deriveConstraintsFrom="@+id/menu2">

        <Constraint
            android:id="@+id/iv_intro_2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="84dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />

        <Constraint
            android:id="@+id/iv_intro_3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="84dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/iv_indicator_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="28dp"
            motion:layout_constraintEnd_toStartOf="@id/iv_indicator_2"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_3" />

        <Constraint
            android:id="@+id/iv_indicator_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_3" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/iv_indicator_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginStart="28dp"
            motion:layout_constraintStart_toEndOf="@id/iv_indicator_2"
            motion:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_3" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/btn_next_intro_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="38dp"
            android:paddingVertical="12dp"
            motion:layout_constraintTop_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/btn_next_intro_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="38dp"
            android:paddingVertical="12dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/menu2"
        motion:constraintSetEnd="@+id/menu3" >
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@id/iv_intro_2"
            motion:touchAnchorSide="right"/>
    </Transition>

    <Transition
        motion:constraintSetStart="@id/menu2"
        motion:constraintSetEnd="@id/menu3">
        <OnClick
            motion:targetId="@+id/btn_next_intro_2"
            motion:clickAction="transitionToEnd" />
    </Transition>
</MotionScene>
