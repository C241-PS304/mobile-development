<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ui.fragments.program.ProgramFragment">

    <TextView
        android:id="@+id/tv_title_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/program"
        android:textColor="@color/black_title"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_programs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_program"
        tools:listitem="@layout/item_program"
        tools:itemCount="1"/>

    <include
        android:id="@+id/example_item_program"
        layout="@layout/item_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/rv_programs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_program"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/add_24"
        android:paddingEnd="13dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/example_item_program"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_test_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Program"
        app:layout_constraintStart_toEndOf="@id/btn_add_program"
        app:layout_constraintTop_toTopOf="@id/btn_add_program"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_program"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_error"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/add_24"
        android:paddingEnd="13dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_program"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_test_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Dialog"
        app:layout_constraintStart_toEndOf="@id/btn_show_error"
        app:layout_constraintTop_toTopOf="@id/btn_show_error"
        app:layout_constraintBottom_toBottomOf="@id/btn_show_error"/>

</androidx.constraintlayout.widget.ConstraintLayout>