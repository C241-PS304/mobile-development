<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.intro.IntroActivity"
    android:background="@color/white"
    android:padding="16dp"
    app:layoutDescription="@xml/activity_intro_scene">

    <ImageView
        android:id="@+id/iv_intro_1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title_intro_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum 1"
        android:textSize="20sp"
        android:textColor="@color/black_title"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/iv_intro_1"
        app:layout_constraintStart_toStartOf="@id/iv_intro_1"
        app:layout_constraintEnd_toEndOf="@id/iv_intro_1" />

    <TextView
        android:id="@+id/tv_subtitle_intro_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet consectetur. Pellentesque eu integer"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black_subtitle"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_intro_1"
        app:layout_constraintStart_toStartOf="@id/tv_title_intro_1"
        app:layout_constraintEnd_toEndOf="@id/tv_title_intro_1"/>

    <ImageView
        android:id="@+id/iv_intro_2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title_intro_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum 2"
        android:textSize="20sp"
        android:textColor="@color/black_title"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/iv_intro_2"
        app:layout_constraintEnd_toEndOf="@id/iv_intro_2"
        app:layout_constraintStart_toStartOf="@id/iv_intro_2"/>

    <TextView
        android:id="@+id/tv_subtitle_intro_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet consectetur. Pellentesque eu integer"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black_subtitle"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_intro_2"
        app:layout_constraintStart_toStartOf="@id/tv_title_intro_2"
        app:layout_constraintEnd_toEndOf="@id/tv_title_intro_2"/>

    <ImageView
        android:id="@+id/iv_intro_3"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title_intro_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum 3"
        android:textSize="20sp"
        android:textColor="@color/black_title"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/iv_intro_3"
        app:layout_constraintEnd_toEndOf="@id/iv_intro_3"
        app:layout_constraintStart_toStartOf="@id/iv_intro_3"/>

    <TextView
        android:id="@+id/tv_subtitle_intro_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet consectetur. Pellentesque eu integer"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black_subtitle"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_intro_3"
        app:layout_constraintStart_toStartOf="@id/tv_title_intro_3"
        app:layout_constraintEnd_toEndOf="@id/tv_title_intro_3"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_indicator_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toStartOf="@id/iv_indicator_2"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_1"
        app:altSrc="@drawable/circle_full_24"
        app:srcCompat="@drawable/circle_24"
        android:tint="@color/primary_purple"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_indicator_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_1"
        app:altSrc="@drawable/circle_full_24"
        app:srcCompat="@drawable/circle_24"
        android:tint="@color/primary_purple"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_indicator_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="58dp"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toEndOf="@id/iv_indicator_2"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_intro_1"
        app:altSrc="@drawable/circle_full_24"
        app:srcCompat="@drawable/circle_24"
        android:tint="@color/primary_purple"/>
    
    <Button
        android:id="@+id/btn_next_intro_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="38dp"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/primary_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_next_intro_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="38dp"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/primary_purple"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_next_intro_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="38dp"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/primary_purple"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>